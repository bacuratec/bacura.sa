{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "checkJs": false,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "app/**/*", "lib/**/*", "context/**/*", "pages/**/*"],
  "exclude": ["node_modules", "dist", ".next", "node_modules"]
}

